{
  "name": "nuxt3-supabase",
  "version": "0.0.1",
  "description": "TODO",
  "keywords": [],
  "license": "MIT",
  "author": "",
  "sideEffects": false,
  "exports": {
    "require": "./dist/module.js",
    "import": "./dist/module.mjs"
  },
  "main": "./dist/module.js",
  "module": "./dist/module.mjs",
  "types": "./dist/module.d.ts",
  "files": [
    "dist/module.js",
    "dist/module.mjs",
    "dist/plugin.mjs",
    "dist/module.d.ts"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:module": "siroc build",
    "build:plugin": "siroc build -i ./src/plugin.ts -o ./dist/plugin.mjs -f esm",
    "fix": "npm-run-all --parallel lint:fix format:fix",
    "format:fix": "npm-run-all --parallel \"format:prettier --write\"",
    "format:prettier": "prettier --config .prettierrc --ignore-path .prettierignore '**/*.{js,json,html}'",
    "lint": "npm-run-all --parallel lint:secret lint:codes",
    "lint:codes": "eslint ./src --ext .js,.ts,.vue,.json",
    "lint:fix": "npm-run-all --parallel \"lint:codes --fix\"",
    "lint:secret": "secretlint \"**/*\"",
    "play": "nuxt dev playground"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "prettier --write"
    ],
    "*.{js,vue}": [
      "prettier --write",
      "eslint --fix --ext .js,.vue"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "eslint --fix --ext .ts"
    ],
    "*": [
      "secretlint"
    ]
  },
  "dependencies": {
    "@nuxt/kit-edge": "^3.0.0-27235989.d52b1e8",
    "@supabase/supabase-js": "^1.24.0"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15.8",
    "@secretlint/secretlint-rule-preset-recommend": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "nuxt3": "latest",
    "prettier": "^2.4.1",
    "secretlint": "^4.1.3",
    "siroc": "^0.16.0",
    "typescript": "^4.4.4",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  }
}
